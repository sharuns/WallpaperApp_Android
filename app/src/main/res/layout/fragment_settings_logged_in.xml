<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="167dp"
            android:layout_height="145dp"

            android:background="@drawable/ic_baseline_insert_emoticon_24" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text= "Sharun Sashikumar"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_email"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text= "SharunSashikumar@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:drawableLeft="@drawable/ic_baseline_logout"
            android:id="@+id/text_view_logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text= "@string/logout"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </LinearLayout>


</RelativeLayout>